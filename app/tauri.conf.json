{
  "$schema": "../ui/node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SnapLLM",
  "version": "1.0.0",
  "identifier": "snapllm",
  "build": {
    "beforeDevCommand": "npm --prefix ui run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm --prefix ui run build",
    "frontendDist": "ui/dist"
  },
  "app": {
    "windows": [],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPCONFIG/**", "$HOME/**"]
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/a7mddra/snapllm/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhBRkVGRUQxQ0Q3M0IxODUKUldTRnNYUE4wZjcraXBpNkgyS0ZnTVdzUFlTVjdwMk14dFNDRUZsUC9iM2FjSGxNbTlxaGoxa20K"
    },
    "cli": {
      "description": "snapllm",
      "args": [
        {
          "name": "image",
          "index": 1,
          "takesValue": true,
          "description": "Path to an image to load on startup."
        },
        {
          "name": "background",
          "short": "b",
          "description": "Start in background/tray-only mode (used by OS autostart)."
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/ocr-engine",
      "binaries/whisper-stt",
      "binaries/capture-engine"
    ],
    "resources": ["../sidecars/whisper-stt/models/*", "binaries/qt-runtime/*"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
