{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main", "imgbb-setup"],
  "permissions": [
    "core:default",
    "core:window:allow-create",
    "core:window:allow-start-dragging",
    "process:default",
    "fs:default",
    "fs:allow-mkdir",
    "fs:allow-write-text-file",
    "fs:allow-exists",
    "fs:allow-read-text-file",
    "dialog:default",
    "opener:default",
    "updater:default",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPCONFIG",
        "$APPCONFIG/**",
        "$APPDATA",
        "$APPDATA/**",
        "$APPCACHE",
        "$APPCACHE/**",
        "$TEMP",
        "$TEMP/**",
        "$HOME",
        "$HOME/**"
      ]
    }
  ]
}
